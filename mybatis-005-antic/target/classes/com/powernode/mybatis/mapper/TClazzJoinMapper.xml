<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.powernode.mybatis.mapper.TClazzJoinMapper">
    <select id="selectByCid2" resultType="com.powernode.mybatis.pojo.TClazzJoin">
        select * from t_clazz where cid = #{cid}
    </select>

    <select id="selectClazzAndStusByCid" resultMap="clazzResultMap">
        select * from t_clazz c join t_student2 s on c.cid = s.cid where c.cid = #{cid}
    </select>
    <resultMap id="clazzResultMap" type="com.powernode.mybatis.pojo.TClazzJoin">
        <id property="cid" column="cid"/>
        <result property="cname" column="cname"/>
        <collection property="stus" ofType="com.powernode.mybatis.pojo.TUserJoin">
            <id property="sid" column="sid"/>
            <result property="sname" column="sname"/>
        </collection>
    </resultMap>
</mapper>